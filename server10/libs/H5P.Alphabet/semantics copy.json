[
  {
    "name": "playerMode",
    "type": "select",
    "importance": "low",
    "label": "Player mode",
    "description": "Select the layout of the player.",
    "options": [
      {
        "value": "minimalistic",
        "label": "Minimalistic"
      },
      {
        "value": "full",
        "label": "Full"
      },
      {
        "value": "transparent",
        "label": "Transparent"
      }
    ],
    "default": "minimalistic"
  },
  {
    "name": "fitToWrapper",
    "type": "boolean",
    "importance": "low",
    "label": "Fit to wrapper",
    "default": true,
    "descriptions": "Adjust audioplayer size to use available space",
    "widget": "showWhen",
    "showWhen": {
      "rules": [
        {
          "field": "playerMode",
          "equals": "minimalistic"
        },
        {
          "field": "playerMode",
          "equals": "full"
        }
      ]
    }
  },
  {
    "name": "controls",
    "type": "boolean",
    "importance": "low",
    "label": "Enable controls",
    "default": true,
    "description": "Controls allow the user to for instance pause the audio",
    "widget": "showWhen",
    "showWhen": {
      "rules": [
        {
          "field": "playerMode",
          "equals": "full"
        }
      ]
    }
  }
  
]
